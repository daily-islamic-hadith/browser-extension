{
  "manifest_version": 3,
  "name": "Daily Islamic Hadith",
  "description": "Get daily Islamic hadith directly from your browser.",
  "version": "1.0",
  "action": {
    "default_popup": "popup/popup.html",
    "default_icon": "images/icon.png"
  },
  "options_ui": {
    "page": "options/options.html",
    "open_in_tab": false
  },
  "permissions": [
    "activeTab",
    "storage"
  ]
}
