{
  "manifest_version": 3,
  "name": "Daily Islamic Hadith",
  "description": "Get daily Islamic hadith directly from your browser.",
  "version": "1.0",
  "action": {
    "default_popup": "popup/popup.html",
    "default_icon": "images/icon.png"
  },
  "options_ui": {
    "page": "options/options.html",
    "open_in_tab": false
  },
  "permissions": [
    "activeTab",
    "storage"
  ],
  "browser_specific_settings": {
    "gecko": {
      "id": "daily-islamic-hadith@line.pm",
      "strict_min_version": "109.0"
    }
  }
}
